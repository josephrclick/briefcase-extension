{
  "permissions": {
    "allow": [
      "Bash(npm run build)",
      "Bash(npm run lint)",
      "Bash(npm run test)",
      "Bash(npm run typecheck)",
      "Bash(npm run format:fix)",
      "Bash(npm install)",
      "Bash(npm run -ws *)",
      "Read(packages/**)",
      "Read(apps/**)",
      "Read(_docs/**)"
    ],
    "deny": [
      "Write(.env)",
      "Write(.env.*)",
      "Edit(package-lock.json)",
      "Write(node_modules/**)",
      "Bash(rm -rf *)"
    ]
  },
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-bash.py"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json, sys; data=json.load(sys.stdin); path=data.get('tool_input',{}).get('file_path',''); sys.exit(2 if any(p in path for p in ['.env', 'package-lock.json', '.git/', 'node_modules/', '_docs/PRD.md']) else 0)\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/prettier-check.sh"
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30
}

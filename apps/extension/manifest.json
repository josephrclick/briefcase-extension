{
  "manifest_version": 3,
  "name": "Briefcase",
  "version": "1.0.0",
  "description": "Summarize any page in a pinned side panel. Local-first. Optional A/B compare.",
  "minimum_chrome_version": "109",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "storage", "downloads", "sidePanel", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open Briefcase",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}

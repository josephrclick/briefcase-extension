{
  "name": "briefcase",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "lint": "npm run -ws lint",
    "typecheck": "npm run -ws typecheck",
    "test": "npm run -ws test",
    "format": "prettier --cache --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier -w .",
    "prune:worklog": "node .claude/scripts/prune-worklog.js",
    "prune:worklog:dry": "node .claude/scripts/prune-worklog.js --dry-run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.34.0",
    "@types/chrome": "0.1.4",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "eslint": "9.9.0",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "prettier": "3.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "npm@10"
}
